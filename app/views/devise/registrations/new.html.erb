<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class= "text-center">
                <% if params[:plan]  == '2' %>
                    <h1>Pro account</h1>
                    <p>Sign up for the pro account for $10/month and get access to additional features</p>
                <% else %>
                    <h1>Basic account</h1>
                    <p>Sign up for free and get basic access to the services</p>
                <% end %>
            </div>
            
            <div class="well">
                <% if params[:plan] == '2' %>
                    <h3>Pro account sign up form</h3>
                    <%= render "pro_form" %>
                <% else %>
                    <h3>Basic account sign up form</h3>
                    <%= render "basic_form" %>
                <% end %>
                
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>